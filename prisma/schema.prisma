// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Quiz {
  id              String   @id @default(uuid())
  name            String   // Now required
  text            String
  questions       String
  totalQuestions  Int
  correctAnswers  Int
  skippedQuestions Int
  timeSpent       Int
  createdAt       DateTime @default(now())
}
